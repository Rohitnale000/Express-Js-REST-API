{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Sample API",
    "description": "operation on student API"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api"
    }
  ],
  "paths": {
    "/user": {
      "get": {
        "description": "Return all student data",
        "responses": {
          "200": {
            "description": " get list of student ",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/student"
                  }
                }
              }
            }
          }
        }
      },
       "post": {
        "description": "insert student data",
        "requestBody": {
          "description": "student to add into file",
          "required": true,
          "content": {
              "application/json": {
                  "schema": {
                      "$ref": "#/components/schemas/student"
                  }
              }
          }
      },
        "responses": {
          "200": {
            "description": "add new student ",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/student"
                  }
                }
              }
            }
          },
          "400": {
            "description": "add new student ",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Error"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "student": {
        "required": ["firstName", "email"],
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string",
             "minLength": 1,
            "maxLength": 20
          },
          "email": {
            "type": "string"
          },
          "id": {
            "type": "string"
          }
        }
      },
      "Error": {
        "required": [
            "code",
            "message"
        ],
        "properties": {
            "code": {
                "type": "integer",
                "format": "int32"
            },
            "message": {
                "type": "string"
            }
        }
    }
    }
  }
}
